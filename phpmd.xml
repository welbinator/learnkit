<?xml version="1.0"?>
<ruleset name="LearnKit PHPMD Rules"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        LearnKit Plugin PHPMD Rules
    </description>

    <!-- Import rule sets -->
    <rule ref="rulesets/codesize.xml">
        <!-- Exclude cyclomatic complexity for WordPress hooks -->
        <exclude name="CyclomaticComplexity"/>
    </rule>

    <!-- Custom cyclomatic complexity threshold -->
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="15"/>
        </properties>
    </rule>

    <rule ref="rulesets/controversial.xml">
        <!-- Allow camelCase method names (WordPress uses snake_case) -->
        <exclude name="CamelCaseMethodName"/>
        <exclude name="CamelCaseParameterName"/>
        <exclude name="CamelCaseVariableName"/>
        <exclude name="CamelCasePropertyName"/>
        <exclude name="CamelCaseClassName"/>
        <!-- WordPress plugins legitimately access superglobals directly -->
        <exclude name="Superglobals"/>
    </rule>

    <rule ref="rulesets/design.xml">
        <!-- WordPress commonly uses exit/die -->
        <exclude name="ExitExpression"/>
    </rule>

    <rule ref="rulesets/naming.xml">
        <!-- WordPress uses short variable names like $wp, $id -->
        <exclude name="ShortVariable"/>
        <!-- Allow long variable names -->
        <exclude name="LongVariable"/>
    </rule>

    <rule ref="rulesets/unusedcode.xml">
        <!-- WordPress REST API callbacks require $request parameter -->
        <exclude name="UnusedFormalParameter"/>
    </rule>

    <!-- Exclude MissingImport - WordPress uses its own class loading -->
    <rule ref="rulesets/cleancode.xml">
        <!-- WordPress commonly uses static access -->
        <exclude name="StaticAccess"/>
        <!-- WordPress commonly uses else expressions -->
        <exclude name="ElseExpression"/>
        <!-- WordPress uses its own class loading -->
        <exclude name="MissingImport"/>
    </rule>

    <!-- Exclude vendor and node_modules -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
</ruleset>
